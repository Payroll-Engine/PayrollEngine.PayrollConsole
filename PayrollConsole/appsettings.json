{
  "StartupCulture": "de-CH",
  "FullErrorLog": true,

  "ApiSettings": {
    // BaseUrl: the backend url
    //"BaseUrl": "https://localhost",

    // BasePort: the backend port
    //"Port": 443,

    // Timeout: the backend reuqest timeout (timespan: default is 100 second)
    //"Timeout": "00:05:00",

    // ApiKey: the backend api key (dev only)
    //"ApiKey": "BackendApiKey"
  },

  // logger
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "HealthChecks": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "pathWindows": "%PROGRAMDATA%/PayrollEngine/Console/logs/log-.log",
                "path": "logs/log-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "buffered": false,
                "restrictedToMinimumLevel": "Information"
              }
            }
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
